: main	
	i := facing-left 
	v0 := 30
	v1 := 20
	loop
		clear
		sprite v0 v1 12
		v2 := key
		if v2 == 7 then i := facing-left 
		if v2 == 7 then v0 += -2 
		if v2 == 9 then i := facing-right 
		if v2 == 9 then v0 +=  2
		if v2 == 5 then i := facing-up 
		if v2 == 5 then v1 +=  -2
		if v2 == 8 then i := facing-down 
		if v2 == 8 then v1 += 2 

	again
